//- Mixins
clearfix()
  &:before
  &:after
    content ''
    display table
    clear both

anim(var, time)
  transition var time ease-out
smooth()
  -webkit-transform translate3d(0, 0, 0)
  -webkit-backface-visibility hidden
  -webkit-perspective 1000
roboto()
  font-family 'Roboto', sans-serif
open-sans()
  font-family 'Open Sans', sans-serif
light()
  font-weight 300
light-italic()
  font-weight 300
  font-style italic
regular()
  font-weight 400
regular-italic()
  font-weight 400
  font-style italic
semi-bold()
  font-weight 600
