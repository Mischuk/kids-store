.profile-item
  clearfix()
  .item-title,
  .tabs-info
    float left
    width 100%
  .gallery
    float left
    width 440px
  .details
    float left
    width 700px
    padding-left 30px
  .lead-profile-image
    height 440px
    line-height 440px
    border 1px solid $gray
    text-align center
    margin-bottom 10px
    overflow hidden
    a
      position relative
      display none
      &.current
        display block !important
      &:after
        content ''
        background: url('../images/sprite.png') no-repeat -219px -95px;
        width: 18px;
        height: 18px;
        position absolute
        right 20px
        top 20px
      &:hover
        &:after
          background-position -244px -95px
  .lead-profile-image-thumb
    clearfix()
    a
      position relative
      float left
      display block
      width 102px
      height 102px
      line-height 95px
      margin-left 10px
      margin-bottom 10px
      border 1px solid $gray
      text-align center
      overflow hidden
      anim(all, .25s)
      &:nth-child(4n+1)
        margin-left 0
        clear left
      &:after
        content ''
        position absolute
        left 0
        top 0
        bottom 0
        right 0
        width 100%
        height 100%
        border 2px solid $green
        opacity 0
        anim(opacity, .25s)
      &:hover
        border-color $green
      &.current
        border-color $green
        &:after
          opacity 1
  .details
    .title
      display inline-block
      width 95px
      font-size 16px
      line-height 1
      semi-bold()
    .header
      margin-bottom 50px
    .articul,
    .brand
      margin-bottom 10px
      a
        color $green
        text-decoration underline
        &:hover
          color $black
    .availability
      > div
        margin-bottom 20px
      .status
        margin-right 35px
        font-size 18px
        color $green
        text-transform uppercase
        cursor default
        semi-bold()
      .no-availability
        .status
          color $red
        a
          color $green
          font-style italic
          font-weight 400
          text-decoration underline
          &:hover
            color $black
    .colors
      margin-top 40px
      margin-bottom 30px
      clearfix()
      cursor default
      > div
        display inline-block
        vertical-align middle
        margin-right 10px
        cursor default
      input[type="checkbox"]
        display none
        & + label
            .color-icon
              position relative
              display inline-block
              width 27px
              height 27px
              vertical-align middle
              cursor pointer
      input[type="checkbox"] + label
        cursor pointer
        -webkit-user-select none
        -moz-user-select none
        -ms-user-select none
        -o-user-select none
        user-select none
      input[type="checkbox"]:checked
        & + label .color-icon
            border 3px solid #bdecdf !important
    .sizes
      margin-bottom 60px
      > div
        display inline-block
      input[type="checkbox"]
        display none
        & + label
          .icon
            position relative
            display inline-block
            width 27px
            height 27px
            line-height 25px
            text-align center
            vertical-align middle
            cursor pointer
            font-size 13px
      input[type="checkbox"]:checked
        & + label .icon
            background-color #fff
            border 1px solid #bdecdf !important
            color $green
    .footer
      height 150px
      .top
        display table
        width 100%
        height 80px
        padding 20px
        margin-bottom 30px
        background-color #f2f2f2
        clearfix()
      .bottom
        height 40px
        clearfix()
      .prices, .counter, .main-price, .add-to-cart
        display table-cell
        vertical-align middle
      .prices
        .old
          font-size 14px
          color #bebfb5
          text-decoration line-through
          line-height 15px
        .current
          color $red
          font-size 19px
          line-height 20px
      .main-price
        font-size 22px
        color $red
      .add-to-cart
        width 185px
        height 40px
        line-height 40px
        a
          position relative
          display block
          width 100%
          height 100%
          font-size 15px
          color #fff
          background-color $green
          text-transform uppercase
          text-align center
          padding-left 20px
          &:after
            content ''
            background: url('../images/sprite.png') no-repeat -44px -126px;
            width: 25px;
            height: 24px;
            position absolute
            left 20px
            top 50%
            margin-top -(@height/2)
          &:hover
            text-decoration underline
      .compare, .favourite, .fast-buy
        width 203px
        height 40px
        line-height 40px
        text-align center
        float left
        a
          display block
          width 100%
          height 100%
      .compare,
      .favourite
        margin-right 30px
        a
          position relative
          background-color #f2f2f2
          color $black
          text-transform uppercase
          semi-bold()
          padding-left 20px
      .compare
        a
          &:after
            content ''
            background: url('../images/sprite.png') no-repeat -70px -95px;
            position absolute
            width: 15px;
            height: 19px;
            left 20px
            top 50%
            margin-top -(@height/2)
          &:hover:after
            background-position -95px -124px
      .favourite
        a
          &:after
            content ''
            background: url('../images/sprite.png') no-repeat -268px -95px;
            position absolute
            width: 18px;
            height: 16px;
            left 20px
            top 50%
            margin-top -(@height/2)
          &:hover:after
            background-position -289px -95px
      .fast-buy
        border 1px solid $green
        a
          line-height 38px
          semi-bold()
          text-transform uppercase
          color $green
          anim(all, .25s)
          &:hover
            background-color $green
            color #fff
  .tabs-info
    margin-bottom 45px
    margin-top 30px
    .tabs-nav
      border-bottom 1px solid $gray
      clearfix()
      li
        float left
        a
          display block
          padding 0 30px
          height 50px
          line-height 50px
          color $black
          semi-bold()
          position relative
          border 1px solid #fff
          span
            display inline-block
            line-height 30px
            border-bottom 3px solid #fff
          &.current
            position relative
            border 1px solid $gray
            border-bottom 1px solid #fff
            background-color #fff
            &:after
              content ''
              width 100%
              bottom -2px
              left 0
              height 1px
              background-color #fff
              z-index 100
              position absolute
            span
              border-bottom 3px solid $green
    .tabs-content
      padding 30px
      border 1px solid $gray
      border-top none
      .table-headling
        text-transform uppercase
        semi-bold()
        margin-bottom 20px
      .tables
        clearfix()
        table
          float left
          width 520px
          &:first-child
            margin-right 30px
          tr:nth-child(odd)
            background-color #f8f8f8
          tr:hover
            background-color $gray
            cursor default
          td
            line-height 30px
            padding-left 20px
            &:first-child
              semi-bold()
      p
        font-size 14px
        line-height 20px
        light()
        padding 20px
        padding-bottom 0
        margin 0

.group-items
  width 100%
  padding-bottom 40px
  margin-bottom 25px
  border-bottom 1px solid #ededed
  .item
    display table
    width 100%
    padding 45px 90px
    border 2px solid $green
    .helper
      display table
      width 100%
    .column, .plus, .equal, .total
      display table-cell
      vertical-align middle
    .column
      max-width 140px
      width 140px
      .image
        width 140px
        height 140px
        line-height 136px
        text-align center
        border 1px solid #dbdbdb
        overflow hidden
        &:hover
          border-color $green
        a
          display block
          width 100%
          height 100%
      .title
        font-size 16px
        a
          display inline-block
          color $black
          padding 20px 0
          &:hover
            text-decoration underline
      .price
        font-size 16px
        color $red
    .plus, .equal
      color #c8c5c5
      width 230px
      text-align center
      cursor default
      semi-bold()
      font-size 96px
    .total
      .old
        font-size: 19px;
        color: #bebfb5;
        text-decoration: line-through;
        line-height: 1.2
      .current
        color $red
        font-size 24px
        line-height 1.2
        roboto()
      .economy
        font-size 20px
        padding 10px 0
      .add-to-cart
        width 200px
        height 40px
        text-align center
        line-height 40px
        margin-top 10px
        a
          display block
          width 100%
          height 100%
          background-color $green
          color #fff
          &:hover
            text-decoration underline

.viewed-items
  padding-bottom 20px
  margin-top 25px
  border-bottom none