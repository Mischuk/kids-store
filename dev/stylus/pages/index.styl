.main-carousel
  height 450px
  margin-top 30px
  background-color #efefef
  overflow hidden
  margin-bottom 60px
  .owl-carousel,
  .owl-stage-outer,
  .owl-stage,
  .owl-item,
  .item
    height 100%
  .item
    position relative
    clearfix()
  article
    float left
    width 380px
    padding-top 65px
    p
      margin-top 0
      font-size 18px
      line-height 1
      light()
      cursor default
    h2
      position relative
      padding-bottom 25px
      margin-bottom 40px
      text-transform uppercase
      font-size 43px
      line-height 1.2
      light()
      &:after
        content ''
        width 150px
        height 3px
        background-color $green
        position absolute
        left 0
        bottom 0
    .details
      margin-top 20px
  .images
    width 100%
    height 100%
    background-repeat no-repeat
    background-position: center right
    background-size contain

.main-categories
  margin-bottom 60px
  .wrapper
    clearfix()
  .item
    float left
    background-repeat no-repeat
    background-position 50% 50%
    &:hover
      .title
        background-color #fff
        .name:after
          width 100%
    a
      display block
      width 100%
      height 100%
    .title
      display inline-block
      padding 20px 30px
      margin-top 10px
      background-color #fff
      background-color rgba(255,255,255,.9)
      anim(all, .25s)
      .price
        color $red
        font-size 18px
        line-height 1
        padding 10px 0 0 0
      .name
        position relative
        font-size 20px
        color $black
        text-transform uppercase
        padding-bottom 10px
        &:after
          content ''
          width 75px
          height 1px
          background-color #a4a9b9
          position absolute
          left 0
          bottom 0
          anim(all, .25s)

    &.category-1
      background-image url('../images/content/main-categories/1.jpg')
      width 750px
      height 270px
      margin-right 30px
      margin-bottom 30px
    &.category-2
      background-image url('../images/content/main-categories/2.jpg')
      height 270px
      width 360px
      margin-bottom 30px
    &.category-3
      background-image url('../images/content/main-categories/3.jpg')
      width 360px
      height 570px
      margin-right 30px
    &.category-4
      background-image url('../images/content/main-categories/4.jpg')
      width 750px
      height 270px
      margin-bottom 30px
    &.category-5
      background-image url('../images/content/main-categories/5.jpg')
      width 360px
      height 270px
      margin-right 30px
    &.category-6
      background-image url('../images/content/main-categories/6.jpg')
      width 360px
      height 270px

.popular-items
  margin-bottom 30px
  .items-list
    clearfix()
  .item-wrapper
    border 3px solid #fff
    background-color #fff
  .item
    position relative
    float left
    // width 18%
    // margin-bottom 2.5%
    // margin-left 2.5%
    width 204px
    margin-left 30px
    margin-bottom 30px
    background-color #fff
    height 540px
    overflow hidden
    &:nth-child(5n+1)
      margin-left 0
      clear left
  .image
    height 250px
    line-height 248px
    border 1px solid $gray
    text-align center
    overflow hidden
    anim(all, .25s)
    &:hover
      border-color #fff
  .description
    padding-top 20px
  .title
    font-size 20px
    line-height 1.2
    a
      color #3f4147
      anim(all, .25s)
      &:hover
        color $red
  .category
    padding 10px 0
    a
      color $gray
      font-size 16px
      line-height 1
      &:hover
        color $black
  .lead-paragraph
    font-size 14px
    line-height 1.2
    color #818181
    cursor default
    margin-bottom 15px
    height 5em
    overflow hidden
  .item-footer
    .top
      height 40px
      clearfix()
    .bottom
      margin-top 20px
      height 37px
      background-color #f2f2f2
    .price
      float left
      cursor default
      line-height 20px
      .old
        font-size 14px
        color #bebfb5
        text-decoration line-through
        line-height 15px
      .current
        color $red
        font-size 19px
        line-height 20px
    .add-to-cart
      float right
      a
        position relative
        display block
        width 80px
        height 40px
        border 1px solid $green
        anim(all, .25s)
        &:after, &:before
          content ''
          position absolute
          background url('../images/sprite.png') no-repeat 0 -95px
          width 25px
          height 24px
          left 50%
          top 50%
          margin-left -(@width/2)
          margin-top -(@height/2)
          anim(all, .25s)
        &:before
          opacity 0
          background url('../images/sprite.png') no-repeat -44px -126px
        &:hover
          background-color $green
          &:after
            opacity 0
          &:before
            opacity 1
    .counter
      position relative
      float left
      width 70px
      height 100%
      margin-left 10px
      form
        height 100%
        input
          width 38px
          position absolute
          left 50%
          margin-left -(@width/2)
          user-select none
          text-align center
          color #3f4147
          font-size 18px
          line-height 37px
          border none
          background-color #f2f2f2
      .inc, .dec
        width: 16px;
        height: 15px;
        position absolute
        top 50%
        margin-top -(@height/2)
        text-indent -9999px
        user-select none
        cursor pointer
      .inc
        background: url('../images/sprite.png') no-repeat -171px -95px;
        right 0
        &:hover
          background-position -195px -95px
      .dec
        left 0
        background: url('../images/sprite.png') no-repeat -122px -95px;
        &:hover
          background-position -147px -95px
    .options
      float right
      margin-right 10px
      clearfix()
      .zoom, .param, .favourite
        float left
        margin-left 10px
        a
          display block
      .zoom a
        background: url('../images/sprite.png') no-repeat -219px -95px;
        width: 18px;
        height: 18px;
        margin-top 9.5px
        &:hover
          background-position -244px -95px
      .param a
        background: url('../images/sprite.png') no-repeat -70px -95px;
        width: 15px;
        height: 19px;
        margin-top 9px
        &:hover
          background-position -94px -95px
      .favourite a
        background: url('../images/sprite.png') no-repeat -268px -95px;
        width: 18px;
        height: 16px;
        margin-top 11px
        &:hover
          background-position -289px -95px
  .hidden-details
    visibility hidden
    opacity 0
    height 0
    .colors, .sizes
      .title
        color #3f4147
        margin 15px 0
        font-size 15px
      .list
        clearfix()
        li
          float left
          width 38px
          height 38px
          line-height 36px
          text-align center
          margin-right 10px
          cursor default
        a
          display block
          width 100%
          height 100%
    .sizes li
      border 1px solid $black
      margin-bottom 10px
      anim(all, .25s)
      &:hover
        background-color $green
        color #fff
  .item:hover
    overflow visible
    .item-wrapper
      position absolute
      left -18px
      top -18px
      width 240px
      padding 18px
      border 3px solid $green
      z-index 10
    .hidden-details
      visibility visible
      opacity 1
      height auto
.shares, .news
  margin-bottom 30px
  .headling
    .all
      display inline-block
      background: url('../images/sprite.png') no-repeat 0 -130px;
      width: 16px;
      height: 16px;
      &:hover
        background-position -21px -130px
  .items-list
    clearfix()
  .item
    float left
    width 31.6%
    margin-left 2.6%
    &:nth-child(3n+1)
      margin-left 0
      clear left
    .image
      display block
      width 100%
      height 210px
      overflow hidden
      img
        width 100%
        height 100%
    .date
      font-size 15px
      color #818181
      height 50px
      line-height 50px
      cursor default
    .title
      display inline-block
      font-size 20px
      color #3f4147
      margin-bottom 15px
      &:hover
        color $red
    .lead-paragraph
      font-size 14px
      color #818181
      cursor default
.brands
  .items-list
    clearfix()
  .item
    position relative
    float left
    width 18%
    height 48px
    margin-bottom 2.5%
    margin-left 2.5%
    padding-left 68px
    line-height 1.5
    padding-right 60px
    &:nth-child(5n+1)
      margin-left 0
      clear left
    &:after
      content ''
      width 48px
      height 48px
      position absolute
      left 0
      top 0
      background-color $green
.company-story
  background-color #f2f2f2
  padding 50px 0
  overflow hidden
  .headling
    position relative
    padding-bottom 15px
    &:after
      content ''
      width 200px
      height 1px
      background-color $green
      position absolute
      left 0
      bottom 0
  article
    width 45%
    color #818181
    &:after
      content ''
      width 774px
      height 779px
      background url(../images/company.png) 0 0 no-repeat
      position absolute
      right -14%
      top 60%
      margin-top -(@height/2)
    .details
      margin-top 20px
    p
      margin-top 0