.main-carousel
  position relative
  height 450px
  margin-top 30px
  background-color #efefef
  overflow hidden
  margin-bottom 60px
  .owl-carousel,
  .owl-stage-outer,
  .owl-stage,
  .owl-item,
  .item
    height 100%
  .item
    position relative
    clearfix()
  article
    float left
    width 420px
    padding-top 50px
    p
      margin-top 0
      margin-bottom 14px
      font-size 18px
      line-height 1.2
      light()
      cursor default
    h2
      position relative
      padding-bottom 25px
      margin-bottom 42px
      text-transform uppercase
      font-size 43px
      line-height 1.2
      letter-spacing 2px
      light()
      &:after
        content ''
        width 150px
        height 3px
        background-color $green
        position absolute
        left 0
        bottom -5px
    .details
      margin-top 30px
  .images
    width 100%
    height 100%
    background-repeat no-repeat
    background-position right center
    background-size cover

.main-categories
  margin-bottom 55px
  .wrapper
    clearfix()
  .item
    float left
    background-repeat no-repeat
    background-position 50% 50%
    &:hover
      .title
        background-color #fff
        .name:after
          width 100%
    a
      display block
      width 100%
      height 100%
    .title
      display inline-block
      padding 14px 30px
      margin-top 10px
      background-color #fff
      background-color rgba(255,255,255,.9)
      anim(all, .25s)
      .price
        color $red
        font-size 18px
        line-height 1
        padding 7px 0 0 0
      .name
        position relative
        font-size 20px
        line-height 24px
        color $black
        text-transform uppercase
        padding-bottom 7px
        letter-spacing .5px
        &:after
          content ''
          width 75px
          height 1px
          background-color #a4a9b9
          position absolute
          left 0
          bottom 0
          anim(all, .25s)
  .category-1
    background-image url('../images/content/main-categories/1.jpg')
    width 750px
    height 270px
    margin-right 30px
    margin-bottom 30px
  .category-2
    background-image url('../images/content/main-categories/2.jpg')
    height 270px
    width 360px
    margin-bottom 30px
  .category-3
    background-image url('../images/content/main-categories/3.jpg')
    width 360px
    height 570px
    margin-right 30px
  .category-4
    background-image url('../images/content/main-categories/4.jpg')
    width 750px
    height 270px
    margin-bottom 30px
  .category-5
    background-image url('../images/content/main-categories/5.jpg')
    width 360px
    height 270px
    margin-right 30px
  .category-6
    background-image url('../images/content/main-categories/6.jpg')
    width 360px
    height 270px



.popular-items
  margin-bottom 23px
  .item
    &:nth-child(5n+1)
      margin-left 0
      clear left

/* Shares & News */
.shares, .news
  margin-bottom 30px
  .headling
    .all
      display inline-block
      background: url('../images/sprite.png') no-repeat 0 -130px;
      width: 16px;
      height: 16px;
      &:hover
        background-position -21px -130px
  .items-list
    clearfix()
  .item
    .image
      display block
      width 100%
      height 210px
      overflow hidden
      margin-top 6px
      smooth()
      img
        width 100%
        height 100%
    .date
      font-size 15px
      color #818181
      height 50px
      line-height 50px
      cursor default
    .title
      display inline-block
      font-size 20px
      color #3f4147
      margin-bottom 25px
      &:hover
        color $red
    .lead-paragraph
      font-size 14px
      line-height 1.3
      color #818181
      cursor default
/* Brands */
.brands
  margin-bottom 30px
  .headling
    margin-top 6px
  .items-list
    clearfix()
    margin-top 6px
  .item
    position relative
    float left
    width 18%
    height 48px
    margin-bottom 2.5%
    margin-left 2.5%
    padding-left 68px
    line-height 1.5
    padding-right 60px
    &:nth-child(5n+1)
      margin-left 0
      clear left
    &:after
      content ''
      width 48px
      height 48px
      position absolute
      left 0
      top 0
      background-color $green
    .letter
      position absolute
      left 0
      top 0
      width 48px
      height 48px
      text-align center
      line-height 48px
      color #fff
      z-index 20
      medium()
      font-size 36px
    a
      color $black
/* Company story */
.company-story
  background-color #f2f2f2
  padding 50px 0 80px 0
  overflow hidden
  .headling
    position relative
    padding-bottom 15px
    &:after
      content ''
      width 200px
      height 1px
      background-color $green
      position absolute
      left 0
      bottom 0
  article
    width 45%
    color #818181
    &:after
      content ''
      width 774px
      height 779px
      background url(../images/company.png) 0 0 no-repeat
      position absolute
      right -14%
      top 60%
      margin-top -(@height/2)
    .details
      margin-top 20px
    p
      margin-top 0